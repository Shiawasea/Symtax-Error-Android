<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/settings_available"
        android:layout_width="316dp"
        android:layout_height="45dp"
        android:layout_marginTop="156dp"
        android:text="@string/available_settings"
        android:textColor="@color/black"
        android:textSize="@dimen/settings_header_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/vk_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:contentDescription="@string/vk_auth"
        android:src="@drawable/vk_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_available" />

    <Switch
        android:id="@+id/switch_sound"
        android:layout_width="306dp"
        android:layout_height="30dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="28dp"
        android:switchPadding="@dimen/settings_switch_padding"
        android:text="@string/sound_on"
        android:textColor="@color/black"
        android:textSize="@dimen/settings_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vk_button" />

    <Switch
        android:id="@+id/switch_push"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="12dp"
        android:text="@string/push_on"
        android:textSize="@dimen/settings_text_size"
        android:textColor="@color/black"
        android:switchPadding="@dimen/settings_switch_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_sound" />

    <Switch
        android:id="@+id/switch_updates"
        android:layout_width="306dp"
        android:layout_height="23dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="12dp"
        android:switchPadding="@dimen/settings_switch_padding"
        android:text="@string/check_updates"
        android:textColor="@color/black"
        android:textSize="@dimen/settings_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_push"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>