<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/settings_available_text_view"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/menu_top_shape"
            android:gravity="center"
            android:text="@string/available_settings"
            android:textColor="@color/text_bright"
            android:textSize="@dimen/menu_top_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_available_text_view"
            android:layout_marginTop="52dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sound_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/sounds"
                    android:textColor="@color/text_bright"
                    android:textSize="@dimen/settings_text_size" />

                <ImageView
                    android:id="@+id/sound_view"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    tools:src="@drawable/ic_baseline_music_note_24" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/check_updates_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"

                    android:gravity="center"
                    android:text="@string/check_updates"
                    android:textColor="@color/text_bright"
                    android:textSize="@dimen/settings_text_size" />

                <ImageView
                    android:id="@+id/check_updates_view"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    tools:src="@drawable/ic_baseline_system_update_24" />


            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/back_to_main_menu_button"

            android:layout_width="match_parent"
            android:layout_height="56dp"

            android:layout_alignParentBottom="true"
            android:background="@drawable/menu_bottom_shape"

            android:gravity="center"

            android:text="@string/back"
            android:textSize="@dimen/menu_bottom_text_size"
            android:textColor="@color/text_bright"/>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>