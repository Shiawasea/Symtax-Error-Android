<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_color"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        android:textStyle="italic"-->
        <TextView
            android:id="@+id/name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/text_bright"
            android:fontFamily="cursive"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_marginTop="190dp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="50dp">
        <Button
            android:id="@+id/continue_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/menu_button_primary_ripple"
            android:backgroundTint="@color/primary"
            android:visibility="visible"
            android:gravity="center"
            android:text="@string/continue_game"
            android:textColor="@color/text_bright"
            android:textSize="@dimen/menu_button_text_size"
            >

        </Button>

        <Button
            android:id="@+id/new_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:background="@drawable/menu_button_primary_ripple"
            android:layout_marginTop="15dp"
            android:text="@string/new_game"
            android:backgroundTint="@color/primary"
            android:textColor="@color/text_bright"
            android:textSize="@dimen/menu_button_text_size"
            android:gravity="center"
            >

        </Button>


    </LinearLayout>

    <Button
        android:id="@+id/rules"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_baseline_help_outline_24"
        android:backgroundTint="@color/primary"
        android:fontFamily="cursive"
        android:gravity="center"
        android:textColor="#232122"
        android:textSize="30sp"
        android:layout_margin="10dp">

    </Button>

    <Button
        android:id="@+id/settings"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_margin="10dp"
        android:background="@drawable/ic_baseline_settings_24"
        android:backgroundTint="@color/primary">
    </Button>


</RelativeLayout>