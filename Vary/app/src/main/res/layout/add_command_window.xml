<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <!--    android:backgroundTint="@color/primary">-->
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/team_add_text"
        android:textSize="@dimen/main_big_text_size"
        android:textColor="@color/primary"/>

    <EditText
        android:id="@+id/edit_command_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/add_team"
        android:backgroundTint="@color/primary_additional"

        android:autofillHints="@string/team"

        android:inputType="textCapSentences"
        android:maxLength="@integer/max_command_name_len"
        android:singleLine="true">

        <requestFocus />
    </EditText>

</LinearLayout>